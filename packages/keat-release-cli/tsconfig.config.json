{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2020"],
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true
  },
  "include": ["src/config.ts"]
}

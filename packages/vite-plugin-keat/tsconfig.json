{
    "compilerOptions": {
        "useDefineForClassFields": true,
        "target": "ES2022",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "declaration": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true
    },
    "include": ["src"]
}

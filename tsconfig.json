{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es6"],
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
